%h2 List of applications
%table
	- if is_admin?
		%tr
			%th User
			%th Category
			%th Status
			%th Actions
		- @applications.each do |app|
			%tr
				%td= app.user.email
				%td= app.category.present? ? app.category.name : 'Not yet defined'
				%td= app.approved
				%td
					= link_to 'Show', application_path(app)
					= link_to 'Approve', approve_application_path(app), method: :post
	- else 
		= render 'user_apps'
		= link_to 'Apply for refund', new_application_path