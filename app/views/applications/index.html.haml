%h2 List of applications
%table
	- if is_admin?
		%tr
			%th User
			%th Category
			%th Status
			%th Actions
		- @applications.each do |app|
			%tr
				%td= app.user.email
				%td= app.category.present? ? app.category.name : 'Not yet defined'
				%td= app.status.present? ? app.status : 'Pending'
				%td
					= link_to 'Review', edit_application_path(app)
	- else 
		= render 'user_apps'
		= link_to 'Apply for refund', new_application_path