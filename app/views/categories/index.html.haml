%h2 Refund categories

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Actions
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td
          = link_to 'Edit', edit_category_path(category), class: 'btn btn-warning'
          = link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
= link_to 'New Category', new_category_path, class: 'btn btn-default'
